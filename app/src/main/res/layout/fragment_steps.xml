<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps"
        android:fontFamily="@font/dancing_script"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="40dp"


        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Steps taken for today"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-medium"
        />

    <EditText
        android:id="@+id/editSteps"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginTop="100dp"
        android:inputType="number"
        android:layout_marginStart="200dp"
        />

    <Button
        android:id="@+id/addStepsBtn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Add Steps"
        android:layout_marginTop="150dp"


        />
    <Button
        android:id="@+id/updateStepsBtn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Update Steps"
        android:layout_marginTop="315dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="218dp"
        android:layout_marginStart="10dp"
        android:text="Enter Time to update"
        android:fontFamily="sans-serif-medium"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:layout_marginStart="200dp"
        android:id="@+id/editTime"

        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:layout_marginStart="10dp"
        android:text="Enter Steps to update"
        android:fontFamily="sans-serif-medium"
        android:id="@id/editSteps"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/editTextSteps"
        android:layout_marginTop="260dp"
        android:layout_marginStart="200dp"
        android:inputType="number"
        />

    <Button
        android:id="@+id/readStepsBtn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Read Database"
        android:layout_marginTop="380dp"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="425dp"
        android:layout_marginStart="50dp"
        android:id="@+id/readView"/>

</RelativeLayout>