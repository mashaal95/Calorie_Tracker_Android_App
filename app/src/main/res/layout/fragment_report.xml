<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pie Chart and Bar Graphs"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/dancing_script"
        android:textSize="35dp"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="200dp"
        android:id="@+id/barGraph"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tap to enter a From Date"
        android:id="@+id/enterFromDate"
        android:layout_marginTop="450dp"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tap to enter a To Date"
        android:id="@+id/enterToDate"
        android:layout_marginTop="550dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:text="Obtain Bar Chart"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnBarChart"/>


    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="200dp"
        android:id="@+id/pie"
        >


    </com.github.mikephil.charting.charts.PieChart>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:text="Obtain Pie chart"
        android:id="@+id/btnPieChart"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="170dp"
        android:hint=" Click to Enter a Date"
        android:inputType="text"
        android:id="@+id/editDatePickerForPieChart"/>

</RelativeLayout>